<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    android:id="@+id/cvRoot"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/grid_margin"
    android:layout_marginRight="@dimen/grid_margin"
    android:layout_marginTop="@dimen/cell_margin"
    android:clickable="true"
    card_view:cardCornerRadius="@dimen/card_corner_radius"
    card_view:cardElevation="@dimen/card_elevation">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/ivNeighborPic"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:contentDescription="@string/profile_neighbor"
            android:onClick="onProfileClick"
            android:src="@drawable/contact_ten" />

        <TextView
            android:id="@+id/tvNeighborName"
            android:layout_width="match_parent"
            android:layout_height="64dp"
            android:paddingLeft="8dp"
            android:gravity="center_vertical"
            android:singleLine="true"
            android:text="Neighbor Name"
            android:textSize="18sp"></TextView>
    </LinearLayout>
</android.support.v7.widget.CardView>